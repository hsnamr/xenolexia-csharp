<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Xenolexia.Desktop.ViewModels"
             xmlns:models="using:Xenolexia.Core.Models"
             xmlns:svc="using:Xenolexia.Core.Services"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
             x:Class="Xenolexia.Desktop.Views.LibraryView"
             x:DataType="vm:LibraryViewModel"
             x:Name="LibraryView">

    <Grid RowDefinitions="Auto,Auto,*" Margin="16">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
            <Button Content="Import from file" Command="{Binding ImportFromFileCommand}" />
            <Button Content="Get from online" Command="{Binding ShowOnlineSearchCommand}" />
            <Button Content="Refresh" Command="{Binding LoadBooksCommand}" />
            <SelectableTextBlock Text="{Binding ImportError}" Foreground="Red" VerticalAlignment="Center"
                                 IsVisible="{Binding ImportError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
        </StackPanel>

        <!-- Section title -->
        <TextBlock Grid.Row="1" Text="My Library" FontSize="20" FontWeight="Bold" Margin="0,0,0,12" />

        <!-- Bookshelf: grid of book cards -->
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Books}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="models:Book">
                        <Border Margin="0,0,20,20" Padding="0" CornerRadius="8"
                                Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                                BorderThickness="1" MinWidth="140" MaxWidth="160">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Remove from library"
                                              Tag="{Binding}"
                                              Click="RemoveFromLibraryMenuItem_Click" />
                                </ContextMenu>
                            </Border.ContextMenu>
                            <StackPanel Spacing="8" Margin="12">
                                <!-- Cover placeholder (first letter of title) - double-click to open -->
                                <Border Height="200" CornerRadius="4" Background="#2D3748"
                                        DoubleTapped="BookCard_DoubleTapped">
                                    <TextBlock Text="{Binding Title}" FontSize="48" FontWeight="Bold"
                                               Foreground="White" HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis" MaxLines="2"
                                               TextWrapping="Wrap" TextAlignment="Center" />
                                </Border>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="Read" Command="{Binding ((vm:LibraryViewModel)DataContext).OpenBookCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}" />
                                    <Button Content="Remove" Command="{Binding ((vm:LibraryViewModel)DataContext).DeleteBookCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" MaxLines="2" TextWrapping="Wrap" />
                                <TextBlock Text="{Binding Author}" FontSize="12" Opacity="0.8" TextTrimming="CharacterEllipsis" MaxLines="1" />
                                <TextBlock Text="{Binding Progress, StringFormat='{}{0:F0}% read'}" FontSize="11" Opacity="0.7" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Overlay: Online search panel (click dimmed area or press Escape to close) -->
        <Border x:Name="OnlineSearchOverlay" Grid.Row="0" Grid.RowSpan="3" Background="#80000000"
                IsVisible="{Binding IsOnlineSearchVisible}" ZIndex="10"
                PointerPressed="OnlineSearchOverlay_PointerPressed"
                KeyDown="OnlineSearchOverlay_KeyDown">
            <Border x:Name="OnlineSearchDialog" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="500" MaxWidth="600"
                    Background="{DynamicResource SystemControlBackgroundChromeWhiteBrush}"
                    CornerRadius="12" Padding="24" BoxShadow="0 4 24 0 #40000000"
                    PointerPressed="OnlineSearchDialog_PointerPressed"
                    KeyDown="OnlineSearchDialog_KeyDown">
                <StackPanel Spacing="16">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Get books from free online libraries" FontSize="18" FontWeight="SemiBold" Grid.Column="0" />
                        <Button Content="Close" Command="{Binding HideOnlineSearchCommand}" Grid.Column="1" ToolTip.Tip="Close (Escape)" />
                    </Grid>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBox Text="{Binding SearchQuery}" Watermark="Search by title or author..." Width="280" />
                        <ComboBox ItemsSource="{Binding OnlineSources}" SelectedItem="{Binding SelectedSource}" Width="180" />
                        <Button Content="Search" Command="{Binding SearchOnlineCommand}" />
                    </StackPanel>
                    <TextBlock Text="{Binding SearchError}" Foreground="Red" />
                    <ScrollViewer MaxHeight="320" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="svc:BookSearchResult">
                                    <Border Margin="0,0,0,8" Padding="12" CornerRadius="8"
                                            Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <Border Width="48" Height="72" CornerRadius="4" Background="#2D3748" Grid.Column="0" Margin="0,0,12,0">
                                                <TextBlock Text="{Binding Title}" FontSize="10" Foreground="White" HorizontalAlignment="Center"
                                                           VerticalAlignment="Center" TextTrimming="CharacterEllipsis" MaxLines="3" TextWrapping="Wrap" TextAlignment="Center" />
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding Author}" FontSize="12" Opacity="0.8" TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="Download"
                                                    Command="{Binding ((vm:LibraryViewModel)DataContext).DownloadFromSearchCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <SelectableTextBlock Text="{Binding DownloadError}" Foreground="Red" />
                    <ProgressBar IsIndeterminate="{Binding IsSearching}" IsVisible="{Binding IsSearching}" />
                    <ProgressBar Value="{Binding DownloadProgressPercent}" Maximum="100" IsVisible="{Binding IsDownloading}" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
