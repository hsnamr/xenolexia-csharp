<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Xenolexia.Desktop.ViewModels"
             x:Class="Xenolexia.Desktop.Views.AboutView"
             x:DataType="vm:AboutViewModel">

    <ScrollViewer>
        <StackPanel Margin="24" Spacing="16" MaxWidth="500">
            <TextBlock Text="Xenolexia" FontSize="28" FontWeight="Bold" />
            <TextBlock Text="Learn languages through the stories you love." FontSize="14" Opacity="0.9" />
            <TextBlock Text="{Binding Version}" FontSize="12" Opacity="0.8" />
            <Separator />
            <TextBlock Text="A desktop ebook reader that lets you import books from local storage and discover free books from Project Gutenberg, Standard Ebooks, and Open Library." TextWrapping="Wrap" />
            <TextBlock Text="Supported formats: EPUB, PDF, TXT, FB2 (via FOSS libraries only)." FontSize="12" Opacity="0.9" />
            <Separator />
            <TextBlock Text="Open source" FontWeight="SemiBold" />
            <TextBlock Text="GNU Affero General Public License v3 (AGPL-3.0)" FontSize="12" />
            <TextBlock Text="Ebook support: VersOne.Epub (EPUB), PdfPig (PDF), Fb2.Document (FB2). Built with .NET and Avalonia UI." FontSize="12" Opacity="0.8" TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
