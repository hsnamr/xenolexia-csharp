<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Xenolexia.Android.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Xenolexia.Android"
    Title="Xenolexia"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <ShellContent
            Title="Library"
            ContentTemplate="{DataTemplate local:Views.LibraryPage}" />
        
        <ShellContent
            Title="Reader"
            ContentTemplate="{DataTemplate local:Views.ReaderPage}" />
        
        <ShellContent
            Title="Vocabulary"
            ContentTemplate="{DataTemplate local:Views.VocabularyPage}" />
        
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate local:Views.SettingsPage}" />
    </TabBar>

</Shell>
