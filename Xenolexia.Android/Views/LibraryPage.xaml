<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:Xenolexia.Android.ViewModels"
             x:Class="Xenolexia.Android.Views.LibraryPage"
             x:DataType="viewmodels:LibraryViewModel"
             Title="{Binding Title}">
    
    <Grid RowDefinitions="Auto,*">
        <Button Grid.Row="0"
                Text="Refresh"
                Command="{Binding RefreshCommand}"
                Margin="10" />
        
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Books}"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0"
                               Text="{Binding Title}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        
                        <Label Grid.Row="1"
                               Text="{Binding Author}"
                               FontSize="14"
                               TextColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
</ContentPage>
